<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="0dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">

        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="#808080"
                android:dashWidth="1dp"
                android:dashGap="2dp" />
        </shape>
    </item>
</layer-list>

    <!-- android:dashWidth は点線のサイズ、android:dashGap は点線の間隔を指定する属性 -->
